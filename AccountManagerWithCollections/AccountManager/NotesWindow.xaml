<Window x:Class="AccountManager.NotesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountManager"
        mc:Ignorable="d"
        Title="NotesWindow" Height="350" Width="350">
    <Grid>
        <StackPanel>
            <StackPanel Margin="10" Orientation="Horizontal">
                <Label Content="Notes Categories" />
                <ComboBox x:Name="KeysComboBox" SelectionChanged="KeysComboBox_SelectionChanged" Margin="10,0,0,0" Width="100"></ComboBox>
            </StackPanel>

            <StackPanel Margin="10" Orientation="Horizontal">
                <Label Content="New Note" />
                <TextBox x:Name="NoteTextBox" Margin="47,0,10,0" Width="100" />
                <Button Content="Add" Width="70" Click="AddButton_Click" />
            </StackPanel>

            <StackPanel Margin="10" Orientation="Horizontal">
                <Label Content="Notes" />
                <ListBox x:Name="NotesListBox" Margin="70,0,0,0" Width="180" Height="100" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
